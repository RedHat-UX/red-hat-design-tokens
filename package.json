{
  "name": "@rhds/tokens",
  "version": "0.0.0",
  "description": "Red Hat Design System Tokens",
  "scripts": {
    "build": "wireit",
    "start": "wireit"
  },
  "type": "module",
  "main": "build/js/tokens.js",
  "module": "build/js/tokens.js",
  "exports": {
    ".": {
      "import": "build/js/tokens.js",
      "require": "build/js/tokens.cjs"
    }
  },
  "wireit": {
    "build": {
      "command": "style-dictionary build -c config.cjs",
      "files": [
        "tokens/**/*",
        "docs/**/*",
        "config.js",
        "config.mjs",
        "config.cjs"
      ],
      "output": [
        "build/**"
      ]
    },
    "start": {
      "command": "wds --open --watch --root-dir build",
      "dependencies": [
        "build"
      ]
    }
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "snippets": [
      {
        "language": [
          "css",
          "scss"
        ],
        "path": "./build/editor/vscode.json"
      }
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@web/dev-server": "^0.1.31",
    "nunjucks": "^3.2.3",
    "style-dictionary": "^3.7.0",
    "wireit": "^0.4.3",
    "yaml": "^2.1.0"
  }
}
