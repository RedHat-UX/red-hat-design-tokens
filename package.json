{
  "name": "@rhds/tokens",
  "version": "1.0.0",
  "description": "Red Hat Design System Tokens",
  "scripts": {
    "build": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "build": {
      "command": "style-dictionary build",
      "files": [
        "tokens/**/*",
        "docs/**/*",
        "config.js"
      ],
      "output": [
        "build/**"
      ]
    },
    "start": {
      "command": "wds --open --watch --root-dir build",
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.31",
    "nunjucks": "^3.2.3",
    "style-dictionary": "^3.7.0",
    "wireit": "^0.4.3",
    "yaml": "^2.1.0"
  }
}
