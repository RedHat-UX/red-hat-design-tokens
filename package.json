{
  "name": "@rhds/tokens",
  "version": "1.0.0-beta.11",
  "description": "Red Hat Design System Tokens",
  "scripts": {
    "11ty": "wireit",
    "package": "wireit",
    "style-dictionary": "wireit",
    "build": "wireit",
    "start": "wireit",
    "lint": "wireit",
    "format": "wireit",
    "test": "wireit"
  },
  "type": "module",
  "main": "js/tokens.cjs",
  "module": "js/tokens.js",
  "exports": {
    ".": {
      "import": "./js/tokens.js",
      "require": "./js/tokens.cjs"
    },
    "./values.js": {
      "import": "./js/values.js",
      "require": "./js/values.cjs"
    },
    "./json/*": {
      "require": "./json/*"
    },
    "./plugins/11ty.cjs": "./plugins/11ty.cjs",
    "./plugins/stylelint.cjs": "./plugins/stylelint.cjs"
  },
  "files": [
    "css",
    "editor",
    "plugins",
    "js",
    "json",
    "scss"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "wireit": {
    "style-dictionary": {
      "command": "node build.js",
      "files": [
        "tokens/**/*",
        "docs/**/*",
        "lib/**/*",
        "platforms.yaml",
        "build.js"
      ],
      "output": [
        "build/**",
        "css/**",
        "editor/**",
        "js/**",
        "json/**",
        "scss/**"
      ]
    },
    "11ty": {
      "command": "eleventy"
    },
    "start": {
      "command": "eleventy --serve",
      "service": true,
      "dependencies": [
        "style-dictionary",
        "11ty"
      ]
    },
    "lint": {
      "command": "eslint lib plugins test docs"
    },
    "format": {
      "command": "eslint --fix lib plugins test docs"
    },
    "test": {
      "command": "tape-es test/*.js | tap-difflet",
      "dependencies": [
        "lint",
        "style-dictionary"
      ]
    },
    "package": {
      "command": "cd editor/vscode && vsce package",
      "dependencies": [
        "test"
      ],
      "files": [
        "editor/vscode/package.json",
        "editor/vscode/snippets.json"
      ],
      "output": [
        "*.vsix"
      ]
    },
    "build": {
      "dependencies": [
        "style-dictionary",
        "package"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.25",
    "@changesets/cli": "^2.26.0",
    "@patternfly/eslint-config-elements": "^0.0.2-next.4",
    "css-tree": "^2.3.1",
    "deepmerge": "^4.2.2",
    "eslint": "^8.31.0",
    "markdown-it": "^13.0.1",
    "style-dictionary": "^3.7.2",
    "tap-difflet": "^0.7.2",
    "tape-es": "^1.2.17",
    "vsce": "^2.15.0",
    "wireit": "^0.9.3",
    "yaml": "^2.2.1"
  },
  "dependencies": {
    "highlight.js": "^11.7.0",
    "postcss-value-parser": "^4.2.0",
    "stylelint": "^14.16.1"
  }
}
