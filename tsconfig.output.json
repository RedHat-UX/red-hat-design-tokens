{
  "include": [
    "./css/",
    "./js/",
    "./plugins/",
    "./test/"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
  },
}
